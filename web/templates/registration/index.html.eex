<h2>Listing registrations</h2>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Password hash</th>
      <th>Status</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for registration <- @registrations do %>
    <tr>
      <td><%= registration.email %></td>
      <td><%= registration.password_hash %></td>
      <td><%= registration.status %></td>

      <td class="text-right">
        <%= link "Show", to: registration_path(@conn, :show, registration), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: registration_path(@conn, :edit, registration), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: registration_path(@conn, :delete, registration), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New registration", to: registration_path(@conn, :new) %>
